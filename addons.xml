<?xml version="1.0" encoding="UTF-8"?>
<addons>

<addon id="repository.gman" name="[COLOR aqua]G-Man Repository[/COLOR]" version="1.0.0" provider-name="G-Man">
<extension point="xbmc.addon.repository" name="G-Man Repository">
    <dir>
        <info compressed="false">https://raw.githubusercontent.com/mrgsi/repository.gman/master/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/mrgsi/repository.gman/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/mrgsi/repository.gman/master/</datadir>
    </dir>   
</extension>
<extension point="xbmc.addon.metadata">
	<summary>The Official G-Man Repo</summary>
    <description>A repo for G-Man created forked Add-ons</description>
    <platform>all</platform>
    <assets>
        <icon>icon.png</icon>
    </assets>
</extension>
</addon>
    
<addon id="plugin.program.rsi" name="Repo Source Installer" provider-name="G-Man" version="1.0.0">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.routing" version="0.2.0" />
	    <import addon="script.module.beautifulsoup4" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">A quick way to install Add-on Repositories (Kodi 19 and up)</summary>
        <description lang="en_GB">Quickly and easily add third party sources to your File Manager, so you can install from zip file[CR]For Kodi 19 and above versions.[CR]None of the Repos are contained within this addon, it only serves to install URL's so you can download and install the developer's official repo zip file. [CR]This add-on is a fork of another add-on. The listing was updated and reformatted after some extensive searches for repositories and add-ons. Credit to the original creator for it's design and function. For info on add-ons in general, see https://www.reddit.com/r/Addons4Kodi/</description>
        <platform>all</platform>
        <language>en</language>
        <license>GPL-2.0-or-later</license>
        <assets>
            <icon>icon.png</icon>
            <fanart></fanart>
        </assets>
    </extension>
</addon>
    
<addon id="plugin.video.megaiptv" name="[COLOR aqua]Mega IPTV[/COLOR]" version="1.1.0" provider-name="G-Man">
	<requires>
		<import addon="xbmc.python" version="3.0.0"/>
		<import addon="script.module.requests"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="addon.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Live IPTV World-Wide</summary>
		<description lang="en">An IPTV Channel Add-on with listings from Fluxus IPTV</description>
		<platform>all</platform>
		<language>en</language>
		<license>GPL-2.0-or-later</license>
		<assets>
			<icon>icon.png</icon>
		</assets>
	</extension>
</addon>

</addons>